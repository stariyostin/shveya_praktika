<Window x:Class="shveya_praktika.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shveya_praktika"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="450"
        ResizeMode="NoResize">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="18">Авторизация</TextBlock>
        <TextBlock>Логин:</TextBlock>
        <TextBox Width="410" Name="Login"></TextBox>
        <TextBlock>Пароль:</TextBlock>
        <PasswordBox Name="Password"></PasswordBox>
        <Button Content="Войти" Click="AutButton_Click"/>
        <Button Content="Регистрация" Click="RegButton_Click"/>
    </StackPanel>
</Window>
